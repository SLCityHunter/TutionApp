<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2CBB4DB"
    android:padding="40dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Add New User -->
        <Button
            android:id="@+id/btnAddUser"
            android:text="Add New User"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#000000" />

        <!-- Email to Edit -->
        <EditText
            android:id="@+id/etEmailToEdit"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="Enter Email to Edit"
            android:textColor="#000000"
            android:textColorHint="#88000000" />

        <!-- Load User -->
        <Button
            android:id="@+id/btnLoadUser"
            android:text="Load User"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#000000" />

        <!-- User Info Fields -->
        <EditText android:id="@+id/etName" android:hint="Name" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>
        <EditText android:id="@+id/etPassword" android:hint="Password" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>
        <EditText android:id="@+id/etRole" android:hint="Role" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>
        <EditText android:id="@+id/etBirthYear" android:hint="Birth Year" android:inputType="number" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>
        <EditText android:id="@+id/etPhone" android:hint="Phone" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>
        <EditText android:id="@+id/etEmergencyName" android:hint="Emergency Contact Name" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>
        <EditText android:id="@+id/etEmergencyPhone" android:hint="Emergency Contact Phone" android:layout_width="200dp" android:layout_height="48dp" android:textColor="#000000" android:textColorHint="#88000000"/>

        <!-- Update & Delete Buttons -->
        <Button
            android:id="@+id/btnUpdate"
            android:text="Update User"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnDelete"
            android:text="Delete User"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#000000" />

        <!-- User List -->
        <TextView
            android:id="@+id/tvUsers"
            android:text="User list will appear here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000"/>
    </LinearLayout>
</ScrollView>
