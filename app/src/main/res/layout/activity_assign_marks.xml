<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2CBB4DB"
    android:padding="40dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Student Email Dropdown -->
        <Spinner
            android:id="@+id/spinnerStudentEmail"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editClassName"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Enter class or Test name"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#88000000" />

        <!-- Enter Mark -->
        <EditText
            android:id="@+id/editMark"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Enter mark"
            android:inputType="number"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textColorHint="#88000000" />

        <!-- Assign Mark Button -->
        <Button
            android:id="@+id/btnAssignMark"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Assign Mark"
            android:background="@drawable/btn_rounded"
            android:textColor="#EEE6FF" />

    </LinearLayout>
</ScrollView>
