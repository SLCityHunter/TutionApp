<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2CBB4DB">

    <!-- Header -->
    <TextView
        android:text="Send Notification"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <!-- Notification Title -->
    <EditText
        android:id="@+id/etNotifyTitle"
        android:hint="Title"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:textColor="#000000"
        android:textColorHint="#88000000" />

    <!-- Notification Message -->
    <EditText
        android:id="@+id/etNotifyMessage"
        android:hint="Message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textColorHint="#88000000" />

    <!-- Student Email -->
    <EditText
        android:id="@+id/etRecipientEmail"
        android:hint="Student Email"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:textColorHint="#88000000" />

    <!-- Send Button -->
    <Button
        android:id="@+id/btnSendNotification"
        android:text="Send"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_rounded"
        android:textColor="#F0DFFD"/>
</LinearLayout>
