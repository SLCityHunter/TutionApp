<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2CBB4DB"
    android:padding="40dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Full Name -->
        <EditText
            android:id="@+id/etName"
            android:hint="Full Name"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Role Spinner -->
        <Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:entries="@array/roles_array"/>

        <!-- Birth Year -->
        <EditText
            android:id="@+id/etBirthYear"
            android:hint="Birth Year (e.g. 1990)"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Phone Number -->
        <EditText
            android:id="@+id/etPhone"
            android:hint="Phone Number"
            android:inputType="phone"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Emergency Contact Name -->
        <EditText
            android:id="@+id/etEmergencyName"
            android:hint="Emergency Contact Name"
            android:inputType="textPersonName"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Emergency Contact Number -->
        <EditText
            android:id="@+id/etEmergencyPhone"
            android:hint="Emergency Contact Number"
            android:inputType="phone"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textColorHint="#88000000"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/btnSignUp"
            android:text="Register"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#EBDAFA"/>

        <!-- Back to Login -->
        <Button
            android:id="@+id/btnGoToLogin"
            android:text="Back to Login"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#EBDBF8"/>
    </LinearLayout>
</ScrollView>
