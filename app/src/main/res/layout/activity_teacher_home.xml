<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teacher_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Teacher"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Go to Dashboard -->
    <Button
        android:id="@+id/btnTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Dashboard"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!-- Manage Tuition Classes -->
    <Button
        android:id="@+id/btnManageTuitionClasses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Tuition Classes"
        app:layout_constraintTop_toBottomOf="@id/btnTeacher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnAssignStudents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assign Students to Class"
        app:layout_constraintTop_toBottomOf="@id/btnScanAttendance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Manage Lecture Materials -->
    <Button
        android:id="@+id/btnManageMaterials"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Lecture Materials"
        app:layout_constraintTop_toBottomOf="@id/btnManageTuitionClasses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- View Assigned Students -->
    <Button
        android:id="@+id/btnViewStudents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Assigned Students"
        app:layout_constraintTop_toBottomOf="@id/btnManageMaterials"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Scan Attendance (QR) -->
    <Button
        android:id="@+id/btnScanAttendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan Attendance (QR)"
        app:layout_constraintTop_toBottomOf="@id/btnViewStudents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/btnSendNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Notification"
        app:layout_constraintTop_toBottomOf="@id/btnAssignStudents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
