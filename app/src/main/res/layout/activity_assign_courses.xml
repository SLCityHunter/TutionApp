<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    android:padding="40dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Student selection -->
        <TextView
            android:text="Select or type student email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/onSecondary"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerStudent"
            android:layout_width="200dp"
            android:layout_height="48dp" />

        <EditText
            android:id="@+id/etStudentEmail"
            android:hint="Or type student email"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/onSecondary"
            android:textColorHint="@color/onSecondary" />

        <!-- Class selection -->
        <TextView
            android:text="Select or type class name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/onSecondary"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="200dp"
            android:layout_height="48dp" />

        <EditText
            android:id="@+id/etClassName"
            android:hint="Or type class name"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/onPrimary"
            android:textColorHint="@color/onSecondary" />

        <Button
            android:id="@+id/btnAssign"
            android:text="Assign Class"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_rounded"
            android:textColor="@color/buttonText"/>

        <TextView
            android:id="@+id/tvAssignedClasses"
            android:text="Assigned classes will appear here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/onSecondary"/>
    </LinearLayout>
</ScrollView>
