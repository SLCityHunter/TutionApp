<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2CBB4DB"
    android:padding="40dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Class selector -->
        <Spinner
            android:id="@+id/spinnerClasses"
            android:layout_width="200dp"
            android:layout_height="48dp" />

        <!-- Lecture Materials section -->
        <TextView
            android:text="Lecture Materials"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/lvMaterials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAddMaterial"
            android:text="Upload Material"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#ECDCFA"/>

        <!-- Assignment section -->
        <TextView
            android:text="Assignments"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/lvAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnAddAssignment"
            android:text="Upload Assignment"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_rounded"
            android:textColor="#ECDCFA"/>
    </LinearLayout>
</ScrollView>
